{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-tests",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist-tests", ".next", "node_modules"]
}
